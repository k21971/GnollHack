<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:gnh="clr-namespace:GnollHackM" 
             xmlns:controls="clr-namespace:GnollHackM"
             x:Class="GnollHackM.SettingsPage"
             BackgroundColor="Black"
             Appearing="ContentPage_Appearing"
             Disappearing="ContentPage_Disappearing">
    
        <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
            <gnh:BackgroundView x:Name="bkgView" BackgroundStyle="StretchedBitmap" BackgroundBitmap="OldPaper" BorderStyle="Simple" HorizontalOptions="Fill" VerticalOptions="Fill"/>
            <Grid BackgroundColor="Transparent" RowSpacing="6" HorizontalOptions="Fill" VerticalOptions="Fill">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" x:Name="lblHeader" Text="Settings" FontSize="Large" FontAttributes="Bold" FontFamily="Diablo" TextColor="Black"
                    HorizontalOptions="Center" VerticalOptions="Center" Margin="0,10,0,0" />
                <Grid Grid.Row="1" MaximumWidthRequest="440" HorizontalOptions="Fill" VerticalOptions="Fill">
                    <ScrollView x:Name="MainScrollView" HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="Transparent">
                        <StackLayout Spacing="6" Margin="18,0">
                            <Label Text="General" FontSize="21" FontAttributes="Bold" FontFamily="Immortal" TextColor="Black" Margin="0,16,0,2" />
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="GPU Acceleration"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="GPUSwitch" Toggled="GPUSwitch_Toggled" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Graphics"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="GraphicsPicker"
                                            Title="Select a graphics style"
                                            FontFamily="Underwood" 
                                            FontSize="17"
                                            TextColor="Black"
                                            TitleColor="Black"
                                            HorizontalTextAlignment="End"
                                            BackgroundColor="Transparent"
                                            WidthRequest="200"
                                            VerticalOptions="Center"
                                            HorizontalOptions="EndAndExpand" >
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>ASCII</x:String>
                                            <x:String>Tiles</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Cursor Style"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="CursorPicker"
                                            Title="Select a cursor style"
                                            FontFamily="Underwood" 
                                            FontSize="17"
                                            TextColor="Black"
                                            TitleColor="Black"
                                            HorizontalTextAlignment="End"
                                            WidthRequest="200"
                                            BackgroundColor="Transparent"
                                            VerticalOptions="Center"
                                            HorizontalOptions="EndAndExpand" >
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>Blinking Underline</x:String>
                                            <x:String>Green Block</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Map FPS"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="RefreshRatePicker"
                                            Title="Select a map refresh rate"
                                            FontFamily="Underwood" 
                                            FontSize="17"
                                            TextColor="Black"
                                            TitleColor="Black"
                                            HorizontalTextAlignment="End"
                                            WidthRequest="200"
                                            BackgroundColor="Transparent"
                                            VerticalOptions="Center"
                                            HorizontalOptions="EndAndExpand" >
                                </Picker>
                            </Grid>
                            <Grid x:Name="NavBarStackLayout" RowSpacing="6" HeightRequest="40">
                                <Label Text="Hide Navigation"
                                            x:Name="NavBarLabel"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="NavBarSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid x:Name="StatusBarStackLayout" RowSpacing="6" HeightRequest="40">
                                <Label Text="Hide Status Bar"
                                            x:Name="StatusBarLabel"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="StatusBarSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Show Battery"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="BatterySwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Show FPS"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="FPSSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Allow Ghost Levels"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="BonesSwitch" Toggled="BonesSwitch_Toggled" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Silent Mode"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="SilentModeSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" Toggled="SilentModeSwitch_Toggled" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Tournament Mode"
                                    x:Name="TournamentLabel" 
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="TournamentSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" Toggled="TournamentSwitch_Toggled" />
                            </Grid>

                            <Label Text="Interface" FontSize="21" FontAttributes="Bold" FontFamily="Immortal" TextColor="Black" Margin="0,16,0,2" />
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Simple Command Layout"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="SimpleCmdLayoutSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" Toggled="SimpleCmdLayoutSwitch_Toggled" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Messages"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="MessageLengthPicker"
                                            Title="Select the number of messages"
                                            FontFamily="Underwood" 
                                            FontSize="17"
                                            TextColor="Black"
                                            TitleColor="Black" 
                                            HorizontalTextAlignment="End"
                                            BackgroundColor="Transparent"
                                            WidthRequest="200"
                                            VerticalOptions="Center"
                                            HorizontalOptions="EndAndExpand" >
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>1</x:String>
                                            <x:String>2</x:String>
                                            <x:String>3</x:String>
                                            <x:String>4</x:String>
                                            <x:String>5</x:String>
                                            <x:String>6</x:String>
                                            <x:String>7</x:String>
                                            <x:String>8</x:String>
                                            <x:String>9</x:String>
                                            <x:String>10</x:String>
                                            <x:String>15</x:String>
                                            <x:String>20</x:String>
                                            <x:String>30</x:String>
                                            <x:String>50</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label x:Name="ForceMaxMessageLabel"
                                            Text=" Show All"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="ForceMaxMessageSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Grid"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="GridSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Hit Point Bars"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="HitPointBarSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Classic Status Bar"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="ClassicStatusBarSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center"  
                                            Toggled="ClassicStatusBarSwitch_Toggled" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label x:Name="ShowExtendedStatusBarLabel"
                                            Text="Show Status Screen"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="ShowExtendedStatusBarSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Show Pets" x:Name="PetsLabel"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="PetSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" Toggled="PetSwitch_Toggled" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Pet Rows" x:Name="PetRowsLabel"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="PetRowPicker"
                                            Title="Select the number of pet rows"
                                            FontFamily="Underwood" 
                                            FontSize="17"
                                            TextColor="Black"
                                            TitleColor="Black"
                                            HorizontalTextAlignment="End"
                                            BackgroundColor="Transparent"
                                            WidthRequest="200"
                                            VerticalOptions="Center"
                                            HorizontalOptions="EndAndExpand" >
                                    <Picker.ItemsSource>
                                        <x:Array Type="{x:Type x:String}">
                                            <x:String>1</x:String>
                                            <x:String>2</x:String>
                                            <x:String>3</x:String>
                                            <x:String>4</x:String>
                                            <x:String>Maximum</x:String>
                                        </x:Array>
                                    </Picker.ItemsSource>
                                </Picker>
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Orbs" x:Name="OrbsLabel"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="OrbSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center"
                                            Toggled="OrbSwitch_Toggled"/>
                            </Grid>

                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Show Max Hit Points" x:Name="MaxHealthInOrbLabel"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="MaxHealthInOrbSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Show Max Mana" x:Name="MaxManaInOrbLabel"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="MaxManaInOrbSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>

                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Player Mark"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="PlayerMarkSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Targeting"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="MonsterTargetingSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Walk Arrows"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="WalkArrowSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Lighter Unlit Areas"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="LighterDarkeningSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Draw Wall Ends"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="WallEndSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Breathing Animations"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="BreatheAnimationSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Default Auto-Center"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="YesClipNormalSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>

                            <Label Text="Behavior" FontSize="21" FontAttributes="Bold" FontFamily="Immortal" TextColor="Black" Margin="0,16,0,2" />
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Empty Wish is Nothing"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="EmptyWishIsNothingSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>

                            <Label Text="Bar Commands" FontSize="21" FontAttributes="Bold" FontFamily="Immortal" TextColor="Black" Margin="0,16,0,2" />
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Bar Command 1" x:Name="SimpleCommandBarButton1Label"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="SimpleCommandBarButton1Picker"
                                            Title="Select command"
                                            FontFamily="Underwood" 
                                            FontSize="17"
                                            TextColor="Black"
                                            TitleColor="Black"
                                            HorizontalTextAlignment="End"
                                            BackgroundColor="Transparent"
                                            WidthRequest="200"
                                            VerticalOptions="Center"
                                            HorizontalOptions="EndAndExpand" >
                                </Picker>
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Bar Command 2" x:Name="SimpleCommandBarButton2Label"
                                            FontFamily="Underwood" TextColor="Black"
                                            FontSize="15"
                                            VerticalOptions="Center" 
                                            HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="SimpleCommandBarButton2Picker"
                                            Title="Select command"
                                            FontFamily="Underwood" 
                                            FontSize="17"
                                            TextColor="Black"
                                            TitleColor="Black"
                                            HorizontalTextAlignment="End"
                                            BackgroundColor="Transparent"
                                            WidthRequest="200"
                                            VerticalOptions="Center"
                                            HorizontalOptions="EndAndExpand" >
                                </Picker>
                            </Grid>

                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Bar Command 3" x:Name="SimpleCommandBarButton3Label"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="SimpleCommandBarButton3Picker"
                                    Title="Select command"
                                    FontFamily="Underwood" 
                                    FontSize="17"
                                    TextColor="Black"
                                    TitleColor="Black"
                                    HorizontalTextAlignment="End"
                                    BackgroundColor="Transparent"
                                    WidthRequest="200"
                                    VerticalOptions="Center"
                                    HorizontalOptions="EndAndExpand" >
                                </Picker>
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Bar Command 4" x:Name="SimpleCommandBarButton4Label"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="SimpleCommandBarButton4Picker"
                                    Title="Select command"
                                    FontFamily="Underwood" 
                                    FontSize="17"
                                    TextColor="Black"
                                    TitleColor="Black"
                                    HorizontalTextAlignment="End"
                                    BackgroundColor="Transparent"
                                    WidthRequest="200"
                                    VerticalOptions="Center"
                                    HorizontalOptions="EndAndExpand" >
                                </Picker>
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Bar Command 5" x:Name="SimpleCommandBarButton5Label"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="SimpleCommandBarButton5Picker"
                                    Title="Select command"
                                    FontFamily="Underwood" 
                                    FontSize="17"
                                    TextColor="Black"
                                    TitleColor="Black"
                                    HorizontalTextAlignment="End"
                                    BackgroundColor="Transparent"
                                    WidthRequest="200"
                                    VerticalOptions="Center"
                                    HorizontalOptions="EndAndExpand" >
                                </Picker>
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Bar Command 6" x:Name="SimpleCommandBarButton6Label"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Picker Grid.Column="1" x:Name="SimpleCommandBarButton6Picker"
                                    Title="Select command"
                                    FontFamily="Underwood" 
                                    FontSize="17"
                                    TextColor="Black"
                                    TitleColor="Black"
                                    HorizontalTextAlignment="End"
                                    BackgroundColor="Transparent"
                                    WidthRequest="200"
                                    VerticalOptions="Center"
                                    HorizontalOptions="EndAndExpand" >
                                </Picker>
                            </Grid>
                            <Label Text="Volume" FontSize="21" FontAttributes="Bold" FontFamily="Immortal" TextColor="Black" Margin="0,16,0,2" />
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Master"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start" />
                                <Slider Grid.Column="1" x:Name="GeneralVolumeSlider" HorizontalOptions="EndAndExpand" VerticalOptions="Center" 
                                    WidthRequest="200" ValueChanged="VolumeSlider_ValueChanged" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Music"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start" />
                                <Slider Grid.Column="1" x:Name="MusicVolumeSlider" HorizontalOptions="EndAndExpand" VerticalOptions="Center" 
                                    WidthRequest="200" ValueChanged="VolumeSlider_ValueChanged" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Ambient"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start" />
                                <Slider Grid.Column="1" x:Name="AmbientVolumeSlider" HorizontalOptions="EndAndExpand" VerticalOptions="Center" 
                                    WidthRequest="200" ValueChanged="VolumeSlider_ValueChanged" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Dialogue"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start" />
                                <Slider Grid.Column="1" x:Name="DialogueVolumeSlider" HorizontalOptions="EndAndExpand" VerticalOptions="Center" 
                                    WidthRequest="200" ValueChanged="VolumeSlider_ValueChanged" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Effects"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start" />
                                <Slider Grid.Column="1" x:Name="EffectsVolumeSlider" HorizontalOptions="EndAndExpand" VerticalOptions="Center" 
                                    WidthRequest="200" ValueChanged="VolumeSlider_ValueChanged" />
                            </Grid>
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Interface"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start" />
                                <Slider Grid.Column="1" x:Name="UIVolumeSlider" HorizontalOptions="EndAndExpand" VerticalOptions="Center" 
                                    WidthRequest="200" ValueChanged="VolumeSlider_ValueChanged" />
                            </Grid>

                            <Label Text="Forum Posting" FontSize="21" FontAttributes="Bold" FontFamily="Immortal" TextColor="Black" Margin="0,16,0,2" />
                            <Grid ColumnSpacing="6" ColumnDefinitions="*,Auto" HorizontalOptions="Fill" HeightRequest="40">
                                <Label Text="Post Game Progress"
                                    FontFamily="Underwood" TextColor="Black"
                                    FontSize="15"
                                    VerticalOptions="Center" 
                                    HorizontalOptions="Start" />
                                <Switch Grid.Column="1" x:Name="PostGameStatusSwitch" HorizontalOptions="EndAndExpand" VerticalOptions="Center" />
                            </Grid>
                            <StackLayout Spacing="6" Orientation="Horizontal" HeightRequest="40">
                                <Label Text="  Webhook Link"
                                        FontFamily="Underwood" TextColor="Black"
                                        FontSize="15"
                                        VerticalOptions="CenterAndExpand" 
                                        HorizontalOptions="Start" />
