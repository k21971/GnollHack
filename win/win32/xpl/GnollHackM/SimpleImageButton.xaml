<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:gnh="clr-namespace:GnollHackM"
             xmlns:controls="clr-namespace:GnollHackM" 
             x:Name="this"
             x:Class="GnollHackM.SimpleImageButton"
             x:DataType="controls:SimpleImageButton">
    
        <Grid x:Name="ViewGrid" BindingContext="{x:Reference this}" WidthRequest="{Binding GridWidth, FallbackValue='45'}" HeightRequest="{Binding GridHeight, FallbackValue='45'}" >
            <gnh:GHCachedImage x:Name="ViewImage" Source="{Binding ImgSourcePath}"
                            BackgroundColor="Transparent" VerticalOptions="Fill" HorizontalOptions="Fill" InputTransparent="True" />
            <Button x:Name="ViewButton" Text="" 
                             BackgroundColor="Transparent" VerticalOptions="Fill" HorizontalOptions="Fill" />
        </Grid>
    
</ContentView>
